<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <p>
  
  <%= link_to 'Sign Up!', new_user_registration_path %>
  <%= link_to 'Login', new_user_session_path %>
  <%= link_to 'Logout', destroy_user_session_path, 'data-turbo-method': :delete %>
  </p>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Posts</h1>
    <%= link_to 'New post', new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="posts" class="min-w-full">
    <%= render @posts %>
  </div>
</div>
