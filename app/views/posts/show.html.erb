<div class="flex flex-col w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <%= render @post %>
    <h2 class="p-4 px-10 m-4 text-xl font-bold">Comments:</h2>
    <%  @post.comments.each do | comment |%>
      <%= render partial: 'comments/comment', locals: { comment: comment }   %>
    <% end %>
    <% if current_user %>
      <%= render partial: 'comments/form', locals: { comment: Comment.new, post: @post } %>
    <% end %>
  </div>
</div>
